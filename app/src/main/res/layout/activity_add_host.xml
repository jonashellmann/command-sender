<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USERNAME" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOST" />

    <EditText
        android:id="@+id/editTextHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SSH PORT" />

    <EditText
        android:id="@+id/editTextSshPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <RadioGroup
        android:id="@+id/radioGroupAuthentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <RadioButton
            android:id="@+id/radioButtonPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.86"
            android:text="PASSWORD AUTHENTICATION" />

        <RadioButton
            android:id="@+id/radioButtonKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEY AUTHENTICATION" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewPrivateKeyPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRIVATE KEY PATH"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextPrivateKeyPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewKeyPassphrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KEY PASSPHRASE"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextKeyPassphrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonSaveHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save host" />

</LinearLayout>